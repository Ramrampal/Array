#include<iostream>
using namespace std;
int main(){
    int arr[]={34,5,354,34,56,2,4};
        int avg;
   // int n=sizeof(arr);
    int size= sizeof(arr)/sizeof(arr[0]);
    int sum=0;
    for(int i=0;i<size;i++){
        sum+=arr[i];

    }
    cout<<sum<<" ";
    cout<<size <<"  ";
    avg=sum/size;
    cout<<avg;
}
